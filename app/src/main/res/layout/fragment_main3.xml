<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <TextView
        android:id="@+id/mask_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3D终极狂飙3【热血版】"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:translationY="60dp" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff" >


        <FrameLayout
            android:id="@+id/viewpager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#80859c">

        </FrameLayout>

        <LinearLayout
            android:id="@+id/sticky_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/prefix_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="10dp" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/place_tv"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3D终极狂飙3【热血版】"
                        android:textColor="#333"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="下载: 120k+"
                        android:textColor="#666"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="文件大小：12MB"
                        android:textColor="#666"
                        android:textSize="12sp" />
                </LinearLayout>

                <Button
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:background="#2da4f0"
                    android:gravity="center"
                    android:text="下载"
                    android:textColor="#fff" />
            </LinearLayout>

            <View
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:textSize="16sp" />

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>