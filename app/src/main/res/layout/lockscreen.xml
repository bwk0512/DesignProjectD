<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.escns.smombie.View.LoopViewPager2
        android:id="@+id/lockscreen_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.escns.smombie.View.LoopViewPager2>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_lock_btn"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/button_unlock"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/btn_lock"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/button_lock"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/btn_key"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>